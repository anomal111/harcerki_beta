<h1>Listing coordinators</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Surname</th>
      <th>City</th>
      <th>Street</th>
      <th>Building</th>
      <th>Apartment</th>
      <th>Zip code</th>
      <th>Login</th>
      <th>Password</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @coordinators.each do |coordinator| %>
      <tr>
        <td><%= coordinator.name %></td>
        <td><%= coordinator.surname %></td>
        <td><%= coordinator.city %></td>
        <td><%= coordinator.street %></td>
        <td><%= coordinator.building %></td>
        <td><%= coordinator.apartment %></td>
        <td><%= coordinator.zip_code %></td>
        <td><%= coordinator.login %></td>
        <td><%= coordinator.password %></td>
        <td><%= coordinator.status %></td>
        <td><%= link_to 'Show', coordinator %></td>
        <td><%= link_to 'Edit', edit_coordinator_path(coordinator) %></td>
        <td><%= link_to 'Destroy', coordinator, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
			<% if defined?(coordinator.orders.first) %>
			<tr>
				<td colspan="13">
					
					<table>
						<thead>
							<tr>
								<td>Paid</td>
								<td>Deadline</td>
								<td>Status</td>
							</tr>
						</thead>
						
						<tbody>
							<% coordinator.orders.each do |order| %>
								<tr>
									<td><%= order.paid %></td>
									<td><%= order.deadline %></td>
									<td><%= order.status %></td>
									<td><%= link_to 'Show', order %></td>
								</tr>
							<% end %>
						</tbody>
					</table>
					
				</td>
			</tr>
			<% end %>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Coordinator', new_coordinator_path %>
