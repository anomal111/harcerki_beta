<h1>Listing orders</h1>

<table>
  <thead>
    <tr>
			<th>Client</th>
      <th>Paid</th>
      <th>Deadline</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
				<td><%= order.coordinator_full_name %>
        <td><%= order.paid %></td>
        <td><%= order.deadline %></td>
        <td><%= order.status %></td>
        <td><%= link_to 'Show', order %></td>
        <td><%= link_to 'Edit', edit_order_path(order) %></td>
        <td><%= link_to 'Destroy', order, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
			<tr>
				<td colspan="6">
					<table>
						<thead>
							<tr>
								<th>Ordinal</th>
								<th>Amount</th>
								<th>Completed</th>
								<th>Price</th>
								<th>Mark</th>
								<th>Title</th>
							</tr>
						</thead>
						
						<tbody>
							<% order.order_positions.each do |order_position| %>
								<tr>
									<td><%= order_position.ordinal %></td>
									<td><%= order_position.deadline %></td>
									<td><%= order_position.status %></td>
									<td><%= order_position.price.to_s %></td>
									<td><%= order_position.issues.mark %></td>
									<td><%= order_position.issues.title %></td>
								</tr>
							<% end %>
						</tbody>
					</table>
				</td>
			</tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Order', new_order_path %>
