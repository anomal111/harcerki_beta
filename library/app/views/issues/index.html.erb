<h1>Listing issues</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Mark</th>
      <th>Title</th>
      <th>Picture</th>
      <th>Volume</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @issues.each do |issue| %>
      <tr>
        <td><%= issue.date %></td>
        <td><%= issue.mark %></td>
        <td><%= issue.title %></td>
        <td><img src="<%= issue.picture %>" alt="<%= issue.title %>"></td>
        <td><%= issue.volume %></td>
        <td><%= issue.price %></td>
        <td><%= link_to 'Show', issue %></td>
        <td><%= link_to 'Edit', edit_issue_path(issue) %></td>
        <td><%= link_to 'Destroy', issue, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Issue', new_issue_path %>
